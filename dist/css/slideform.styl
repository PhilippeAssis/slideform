@import "../../bower_components/stylus-essential/essential.styl"

$sections-a-color-hover-active = #666666
$sections-a-background-hover-active = #ffffff
$status-sm-background = #000000
$status-sm-color = #ffffff
$width-xs = 100vw
$width-sm = 70vw
$width-md = 60vw

*
  e-transition(all, 1s)

.slide-form
  .finish
    display none
  .start
    display block
  .footer
    clear left
    float left
    width 100%;

  .only-review
    display none

  .no-review, .only-form, .status
    display block

  &.no-animate
    e-transition(left top bottom right , 0s)
    *
      e-transition(left top bottom right , 0s)
  &.review
    .only-review
      display block
    .no-review, .only-form, .status
      display none
    .slide-form-item
      e-transition(left top bottom right , 0s)
      position static
      transform none
      margin 0 auto
      .footer
        display none

  .slide-form-item
    position fixed
    top 0%
    transform translate(-50%, 0%)
    width $width-xs
    height auto
    max-height calc(100vh - 30px)
    padding 10px 10px 10px 10px
    overflow auto
    @media only screen and (min-width : e-bootstrap-sm)
      top 50%
      transform translate(-50%, -50%)
      max-height calc(100vh - 5% - 90px)
      width $width-sm
      height auto
      padding 10px 10px 10px 10px
    @media only screen and (min-width : e-bootstrap-md)
      width $width-md
    &.center
      left 50%
    &.right
      left 200%
    &.left
      left -200%

    .title
      float left
      width calc(100% - 10px)
      text-align center
      padding 10px
      h1, h2, h3
        float left
        width 100%

    .body
      margin-top 20px
      padding 10px
      width calc(100% - 10px)
      float left

    .footer
      padding 10px

    .send
      float left
      clear left
      margin-top 50px
      width 100%
      text-align center

  .next, .end
    float right
    margin-top 20px
  .prev
    margin-top 20px
    float left
    clear left
  .init
    margin-top 20px
    float none

  .selections
    list-style none
    list-style-position inside
    margin 0
    padding 0
    text-align center
    li
      display inline
      a
        e-transition(all, 0.2s)
        width 100%
        padding 20px 20px
        text-decoration none
        float left
        cursor pointer

        @media only screen and (min-width : e-bootstrap-sm)
          width 50%
        @media only screen and (min-width : e-bootstrap-md)
          width 33%

        &:hover,&.active
          background-color $sections-a-background-hover-active
          color $sections-a-color-hover-active

  .status
    width auto
    position fixed
    height 30px
    padding-top 8px
    bottom  5%
    left 50%
    transform translate(-50%, 0%)
    text-align center
    background-color transparent
    @media only screen and (max-width : e-bootstrap-sm)
      width 100%
      bottom  0
      background-color $status-sm-background
      ul li i
        color $status-sm-color

    ul
      margin 0
      padding 0
      list-style none
      list-style-position inside
      li
        display inline
        margin 5px
